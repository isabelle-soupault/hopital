{% extends 'base.html.twig' %}

{% block title %}RDV{% endblock %}

{% block body %}
    <h1>RDV</h1>

    <table class="table table-striped table-bordered border-dark align-middl">
        <tbody>
            <tr class="text-center">
                <th>Patient</th>
                <th>Date de début</th>
                <th>Date de fin</th>
            </tr>
            <tr class="text-center">

                <td> </td>    
                <td>Le  <span class="fw-bold">{{ appointment.startTime ? appointment.startTime|date('d-m-Y') : '' }}</span>
                  <br> à  <span class="fw-bold">{{ appointment.startTime ? appointment.startTime|date('H:i') : '' }}</span></td>
                
                <td>Le  <span class="fw-bold">{{ appointment.endTime ? appointment.endTime|date('d-m-Y'): '' }}</span>
                    <br> à  <span class="fw-bold">{{ appointment.endTime ? appointment.endTime|date('H:i'): '' }}</span></td>
            </tr>
        </tbody>
    </table>
<div class = "d-grid gap-2 d-md-flex justify-content-md-end">
    <a href="{{ path('appointments_index') }}" class="btn btn-outline-info p-3 btnBackIndex">Retour à la liste des RDV</a>

    <a href="{{ path('appointments_edit', {'id': appointment.id}) }}" class="btn btn-outline-success p-3">Editer</a>
</div>

<div class = "d-grid gap-2 d-md-flex justify-content-md-end">
    {{ include('appointments/_delete_form.html.twig') }}
</div>    
{% endblock %}
